{% extends 'base.html.twig' %}
{% block body %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <h2 style="  margin-left: 20%;
  margin-right: auto;">Classes. {{ c }} rows</h2>
    <table class="table table-striped" style="width:60%;margin-left: auto; margin-right: auto;">
        <thead>
        <tr>
            <th>ID</th>
            <th>name</th>
            <th>employee_id</th>
            <th colspan="2">actions</th>
        </tr>
        </thead>
        {% for class in items %}
        <tr>
            <td>{{ class.id }}</td>
            <td>{{ class.name }}</td>
            <td>{{ class.employee_id }}</td>

            <td><a href="/classes/edit/{{ class.id }}">edit</a></td>
            <td><a href="/classes/delete/{{ class.id }}">delete</a></td>
        </tr>
        {% endfor %}
    </table>
    <div style="margin-left: 30%">
        {{ knp_pagination_render(items) }}
    </div>
{% endblock %}