{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}
{% block body %}
    <h2 style="display: inline;  margin-left: 20%;
  margin-right: auto;">Users. {{ c }} rows</h2>
    <a style="display: inline; float: right;margin-right: 20%;" class="btn btn-primary" href="/users/new"
       role="button">New</a>
    <table class="table table-striped" style="width:60%;margin-left: auto; margin-right: auto;">
        <thead>
        <tr>
            <th>ID</th>
            <th>name</th>
            <th>surname</th>
            <th>birth_date</th>
            <th>account_type</th>
            <th>created_at</th>
            <th>sex</th>
            <th colspan="2">actions</th>
        </tr>
        </thead>

        {% for user in items %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.birth_date }}</td>
                <td>{{ user.account_type }}</td>
                <td>{{ user.created_at }}</td>
                <td>{{ user.sex }}</td>
                <td><a href="/users/edit/{{ user.id }}">edit</a></td>
                <td><a href="/users/delete/{{ user.id }}">delete</a></td>
            </tr>
        {% endfor %}
    </table>
    <div style="margin-left: 20%">
        {{ knp_pagination_render(items) }}
    </div>

{% endblock %}