{% extends 'base.html.twig' %}

{% block body %}

    <form style="width:40%; margin-left: auto; margin-right: auto; "  class="form-group" action="/books/edit/{{ book.id }}" method="post">
        <label for="name">name</label>
        <input type="text" name="name" class="form-control" value="{{ book.name }}" required>

        <label for="starts_at">genre</label>
        <input type="text" name="genre" class="form-control" value="{{ book.genre }}" required>

        <label for="participants_number">release year</label>
        <input type="text" name="release_year" class="form-control" value="{{ book.release_year }}" required>

        <label for="seats_number">author</label>
        <input type="text" name="author" class="form-control" value="{{ book.author }}" required>

        <label for="seats_number">age group</label>
        <input type="text" name="age_group" class="form-control" value="{{ book.age_group }}">

            <label for="user_id">User</label>
            <select name="user_id" class="custom-select mr-sm-2">
                {% for user in users %}
                <option value="{{ user.id }}">{{ user.id }} {{ user.name }} {{ user.surname }}</option>
                {% endfor %}
                <option value="">no owner - null</option>
            </select>
        <input type="submit">
    </form>

{% endblock %}

